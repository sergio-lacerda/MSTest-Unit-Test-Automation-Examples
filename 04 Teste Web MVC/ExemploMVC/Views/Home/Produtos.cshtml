@model IEnumerable<ExemploMVC.Models.ProdutoEntity>

@{
    ViewData["Title"] = "Produtos";
    Desconto desconto = new Desconto();
}

<h1 style="padding: 30px 0px;">Nossos Produtos</h1>

<table class="table">
    <thead>
        <tr>
            <th>Id</th>
            <th>Produto</th>
            <th style="text-align:right">Preço Unitário</th>
            <th style="text-align:right">% Desconto</th>
            <th style="text-align:right">Valor Desconto</th>
            <th style="text-align:right">Valor Final</th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @item.Id
            </td>
            <td>
                @item.Nome
            </td>
            <td style="text-align:right">
                @item.Preco.ToString("C2")
            </td>
            <td style="text-align:right">
                @desconto.percentualDesconto(@item.Preco).ToString("F1") %
            </td>
            <td style="text-align:right">
                @desconto.valorDesconto(@item.Preco).ToString("C2") 
            </td>
            <td style="text-align:right">
                @desconto.valorFinal(@item.Preco).ToString("C2")
            </td>
        </tr>
}
    </tbody>
</table>
